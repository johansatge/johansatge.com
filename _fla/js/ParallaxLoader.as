package js{		import flash.display.Loader;		public class ParallaxLoader extends Loader	{				private var pictureIndex:int;		private var amplitude:int;				/**		 * Inits the custom loader		 * @param	int	index		the picture index		 * @param	int	amplitude	the allowed amplitude		 */		public function ParallaxLoader(index:int , amplitude:int)		{			this.pictureIndex = index;			this.amplitude = amplitude;			super();		}		/**		 * Returns the index		 * @return	int		 */		public function getIndex():int		{			return this.pictureIndex;		}		/**		 * Returns the amplitude		 * @return	int		 */		public function getAmplitude():int		{			return this.amplitude;		}	}}